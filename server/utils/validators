// utils/validators.js
function isValidEmail(email) {
  return /^\S+@\S+\.\S+$/.test(String(email || ""));
}
function validateLogin(body) {
  return (
    body &&
    typeof body.username === "string" &&
    typeof body.password === "string" &&
    body.username.trim() !== "" &&
    body.password.trim() !== ""
  );
}
module.exports = { isValidEmail, validateLogin };
